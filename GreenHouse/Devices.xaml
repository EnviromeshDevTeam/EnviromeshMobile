<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouse.Devices" >
    <ContentPage.Content>

        <StackLayout>
            <Frame Margin="0" CornerRadius="0">
                <Label Text="Select a Device to view Data" HorizontalTextAlignment="Center" FontSize="25"/>
            </Frame>

            <Button Text="Device 1" Clicked="device1_clicked" FontSize="15" HeightRequest="120" WidthRequest="120" CornerRadius="90" HorizontalOptions="Center" VerticalOptions="Center" Margin="0"/>

            <Button Text="Device 2" Clicked="Button_Clicked" FontSize="15" HeightRequest="120" WidthRequest="120" CornerRadius="90" HorizontalOptions="Center" VerticalOptions="Center" Margin="0"/>

            <Button Text="Device 3" Clicked="Button_Clicked" FontSize="18" HeightRequest="120" WidthRequest="120" CornerRadius="90" HorizontalOptions="Center" VerticalOptions="Center" Margin="0"/>

            <!--Devices can only be added from Admin Auth / Token Through website-->


        </StackLayout>
    </ContentPage.Content>
</ContentPage>